@tailwind base;

@tailwind components;

@tailwind utilities;

h1, h2, h3, h4, h5, h6 {
    @apply font-semibold;
    @apply mb-4 !important;
}

h1 {
    @apply text-4xl;
}

h2 {
    @apply text-xl;
}

h3, h4, h5, h6 {
    @apply text-lg;
}

.content__default {
    h1, h2, h3, h4, h5, h6 {
        @apply mb-4;
    }
    p {
        a {
            @apply text-teal-500;
        }
    }
}