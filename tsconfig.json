{
  "compilerOptions": {
    "target": "es5",                          
    "module": "es2015",                     
    "allowJs": true,                       
    "declaration": true,                   
    "outDir": "./dist",
    "rootDir": "./src",               
    "strict": true,
    "moduleResolution": "node",
    "declarationDir": "@types",
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true  
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "docs", "@types"]
}
